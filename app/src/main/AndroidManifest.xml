<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cl.udelvd"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".vistas.activities.ResetearPassActivity"
            android:launchMode="singleTask" />
        <activity android:name=".vistas.activities.RecuperacionActivity" /> <!-- Main -->
        <activity android:name=".vistas.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".vistas.activities.InvestigadorListActivity"
            android:parentActivityName=".vistas.activities.MainActivity" />
        <!-- Entrevistas -->
        <activity
            android:name=".vistas.activities.EntrevistasListaActivity"
            android:parentActivityName=".vistas.activities.MainActivity" />
        <activity
            android:name=".vistas.activities.NuevaEntrevistaActivity"
            android:parentActivityName=".vistas.activities.EntrevistasListaActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".vistas.activities.EditarEntrevistaActivity"
            android:parentActivityName=".vistas.activities.EntrevistasListaActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" /> <!-- Entrevistado -->
        <activity
            android:name=".vistas.activities.NuevoEntrevistadoActivity"
            android:parentActivityName=".vistas.activities.MainActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".vistas.activities.EditarEntrevistadoActivity"
            android:parentActivityName=".vistas.activities.MainActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" /> <!-- Investigador -->
        <activity
            android:name=".vistas.activities.PerfilActivity"
            android:parentActivityName=".vistas.activities.MainActivity" />
        <activity
            android:name=".vistas.activities.EditarPerfilActivity"
            android:parentActivityName=".vistas.activities.PerfilActivity" />
        <activity
            android:name=".vistas.activities.RegistroActivity"
            android:parentActivityName=".vistas.activities.LoginActivity" />
        <activity android:name=".vistas.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="udelvd-dev.herokuapp.com"
                    android:scheme="https" />
            </intent-filter>
        </activity> <!-- Eventos -->
        <activity
            android:name=".vistas.activities.EventosActivity"
            android:parentActivityName=".vistas.activities.EntrevistasListaActivity" />
        <activity
            android:name=".vistas.activities.NuevoEventoActivity"
            android:parentActivityName=".vistas.activities.EventosActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".vistas.activities.EditarEventoActivity"
            android:parentActivityName=".vistas.activities.EventosActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" /> <!-- Estadisticas -->
        <activity android:name=".vistas.activities.WebViewActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".servicios.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Icono de notificaciones por defecto usado FCM console en background -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_logo_notificacion_1200" />
    </application>

</manifest>