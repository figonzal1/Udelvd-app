<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_entrevistado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="0dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/AppTheme">

    <ImageView
        android:id="@+id/cv_iv_mag_color"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/ICONO_USUARIO"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:srcCompat="@drawable/person_circle" />

    <TextView
        android:id="@+id/cv_tv_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto"
        android:text="@string/NOMBRE_PERSONA"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorOnPrimary"
        card_view:layout_constraintBottom_toBottomOf="@+id/cv_iv_icono_nombre"
        card_view:layout_constraintEnd_toStartOf="@+id/iv_menu_entrevistado"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toEndOf="@+id/cv_iv_icono_nombre"
        card_view:layout_constraintTop_toTopOf="@+id/cv_iv_icono_nombre" />

    <TextView
        android:id="@+id/cv_tv_fecha_nac"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorOnSecondary"
        card_view:layout_constraintBottom_toBottomOf="@+id/cv_iv_icono_fecha_nac"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toEndOf="@+id/cv_iv_icono_fecha_nac"
        card_view:layout_constraintTop_toTopOf="@+id/cv_iv_icono_fecha_nac"
        tools:text="XXXX/XX/XX - XX aÃ±os" />

    <ImageView
        android:id="@+id/cv_iv_icono_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/ICONO_NOMBRE_ENTREVISTADO"
        card_view:layout_constraintStart_toEndOf="@+id/cv_iv_mag_color"
        card_view:layout_constraintTop_toTopOf="@+id/cv_iv_mag_color"
        card_view:srcCompat="@drawable/ic_person_black_alpha_24dp" />

    <ImageView
        android:id="@+id/cv_iv_icono_fecha_nac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/ICONO_FECHA_NAC_ENTREVISTADO"
        card_view:layout_constraintBottom_toTopOf="@+id/cv_iv_entrevistas"
        card_view:layout_constraintStart_toEndOf="@+id/cv_iv_mag_color"
        card_view:layout_constraintTop_toBottomOf="@+id/cv_iv_icono_nombre"
        card_view:srcCompat="@drawable/ic_cake_black_alpha_24dp" />

    <ImageView
        android:id="@+id/cv_iv_entrevistas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/ICONO_N_ENTREVISTAS"
        card_view:layout_constraintBottom_toBottomOf="@+id/cv_iv_mag_color"
        card_view:layout_constraintStart_toEndOf="@+id/cv_iv_mag_color"
        card_view:srcCompat="@drawable/ic_interview_black_alpha_24dp" />

    <TextView
        android:id="@+id/tv_n_entrevistas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorOnPrimary"
        card_view:layout_constraintBottom_toBottomOf="@+id/cv_iv_entrevistas"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toEndOf="@+id/cv_iv_entrevistas"
        card_view:layout_constraintTop_toTopOf="@+id/cv_iv_entrevistas"
        tools:text="X entrevistas" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="?attr/dividerHorizontal"
        android:visibility="visible"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="@+id/cv_iv_entrevistas"
        card_view:layout_constraintTop_toBottomOf="@+id/cv_iv_mag_color" />

    <ImageView
        android:id="@+id/iv_menu_entrevistado"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/ICONO_MENU_CONTEXTUAL"
        card_view:layout_constraintBottom_toBottomOf="@+id/cv_tv_nombre"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.0"
        card_view:srcCompat="@drawable/ic_more_vert_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>